{
    "version": "0.2.0",
    "configurations": [
      {
        // client side debug
        "type": "chrome",
        "request": "launch",
        "name": "Client",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}"
      },
      {
        // server side debug
        "type": "node",
        "request": "attach",
        "name": "Server",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "port": 9229
      }
    ],
  }
  